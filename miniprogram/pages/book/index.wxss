/* miniprogram/pages/book/index.wxss */
@import "../../assets/css/animate.min.wxss";

.animated {
  animation-duration: 2s;
  animation-fill-mode: both;
}
.animated.delay2{
  animation-delay: .2s;
}
.animated.delay4{
  animation-delay: .4s;
}
.animated.delay6{
  animation-delay: .6s;
}
.animated.delay8{
  animation-delay: .8s;
}
.animated.delay10{
  animation-delay: 1s;
}
.animated.delay12{
  animation-delay: 1.2s;
}
.animated.delay15{
  animation-delay: 1.5s;
}
.animated.delay20{
  animation-delay: 2s;
}
.animated.delay25{
  animation-delay: 2.5s;
}
.animated.delay30{
  animation-delay: 3s;
}
.container{
  width: 100%;
  height: 100vh;
  position: relative;
  background-color: #000;
}
.swiper_container{
  width: 100%;
  height: 100%;
}
.swiper_container .swiper_item{
  width: 100%;
  height: 100%;
  position: relative;
}
.swiper_item .slide_bg{
  width: 100%;
  height: 100%;
  position: absolute;
}
.swiper_item .swiper_box{
  width: 100%;
  height: 100%;
  position: relative;
}
.item_container{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.2);
}
.item_container image{
  position: absolute;
}
.next_btn{
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  bottom: 30px;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-position: center;
  animation: slideUp 1s linear infinite;
}
@keyframes slideUp{
  0%{
    transform: translateY(0);
  }
  100%{
    transform: translateY(-30px);
    opacity: 0;
  }
}